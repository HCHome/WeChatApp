/* pages/person/person.wxss */
#infoPart {
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: 1px #C9C9C9 solid;
    border-bottom: 1px #C9C9C9 solid;
    margin-top: 5px;
    font-size: 16px;
}

avatar-view {
    margin: 5px;
}

#infoRight {
    display: flex;
    flex-direction: column;
    font-size: 16px;
}

#info {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 30px;
}

#nickname {
    display: inline-block;
    line-height: 16px;
}

#gender_img {
    display: inline-block;
    width: 16px;
    height: 16px;
    padding: 1px;
}

#job {
    font-size: 12px;
}

.myPost {
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #C9C9C9;
    align-items: center;
    padding: 10px;
}

.postImg {
    width: 50px;
    height: 50px;
    margin-right: 10px;
}
