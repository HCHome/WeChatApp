/* pages/postDetail/postDetail.wxss */

page {
    padding-bottom: 32px;
}

avatar-view {
    position: relative;
    left: 0;
    top: 0;
}

#title {
    padding: 0 15px;
    font-size: 20px;
}

#context {
    padding: 0 15px;
    font-size: 15px;
}

.weui-cell:before {
    border: none;
}

#btn {
    padding: 10px 0;
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    border-bottom: 5px solid #d9d9d9;
}

#imgs {
    display: block;
    margin: 10px 10px 0px 30px;
}

#reply_title {
    position: relative;
    height: 30px;
    font-size: 12px;
    border-bottom: 1px #eee solid;
}

#reply_count {
    position: absolute;
    top: 5px;
    left: 10px;
}

#order {
    position: absolute;
    top: 5px;
    right: 10px;
    text-decoration: underline;
    display: flex;
    flex-direction: row;
    align-items: center;
}

#order-img {
    height: 12px;
    width: 20px;
}

.viewAll {
    text-align: center;
    font-size: 12px;
    margin: 5px;
}

#replyView {
    font-size: 15px;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    border-top: 1px #C9C9C9 solid;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 750rpx;
    min-height: 25px;
}

#repliedFloorTip {
    padding: 3px 5px;
    width: 70px;
    text-align: center;
}

#replyInput {
    border-left: 1px #C9C9C9 solid;
    max-height: 100px;
    min-height: 25px;
    position: relative;
    bottom: 0;
    padding: 3px 5px;
    width: calc(100vw - 91px);
}
