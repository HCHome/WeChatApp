/*搜索框  */

#search_part {
    display: flex;
    flex-direction: row;
    border-style: solid;
    border-width: 1px 0;
    border-color: #eee;
    padding: 5rpx 30rpx;
}

#search_box {
    width: 600rpx;
    height: 60rpx;
    border: 1px solid #ccc;
    border-radius: 30rpx;
    margin-right: 30rpx;
    padding: 0 30rpx;
    font-size: 40rpx;
    display: flex;
    align-items: center;
}


#search_button {
    width: 60rpx;
    height: 60rpx;
    border: 0px;
    border-radius: 0;
    background-size: contain;
    background-repeat: no-repeat;
    background-color: transparent;
}

/*分区  */

#category_part {
    white-space: nowrap;
    border-bottom: 1px solid #ccc;
    padding: 10rpx 0;
}

.category {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    width: 100rpx;
    height: 100rpx;
}

.category_img {
    width: 50rpx;
    height: 50rpx;
    border: 1px solid #ccc;
    border-radius: 50%;
}

.category_name {
    font-size: 25rpx;
    width: 100rpx;
    text-align: center;
}
