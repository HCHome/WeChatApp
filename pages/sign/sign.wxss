/* pages/sign/sign.wxss */
#myPart {
    font-size: 16px;
    display: flex;
    flex-direction: row;
    padding: 5px;
    align-items: center;
}

#infoRight {
    padding-left: 5px;
    display: flex;
    flex-direction: column;
    width: calc(100vw - 140px);
}

#signButton {
    font-size: 15px;
    padding: 0;
    width: 80px;
    height: 50px;
    background-color: transparent;
}

#rankList {
    border-bottom: 1px #C9C9C9 solid;
}

#rankTitle {
    text-align: center;
}

.rankItem {
    font-size: 16px;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 30px;
    border-top: 1px #C9C9C9 solid;
}

.cell {
    display: inline-block;
    font-size: 12px;
}

.num {
    width: 20px;
    text-align: center;
}

.avatar {
    padding: 5px;
}

.nickName {
    width: calc(100vw - 140px);
}

.day_count {
    width: 80px;
}
